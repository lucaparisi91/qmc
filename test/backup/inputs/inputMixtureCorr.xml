<qmc>
  <seed>26785</seed>  
  <nBlocks>100000000</nBlocks>
  <stepsPerBlock>100</stepsPerBlock>
  <warmupBlocks>0</warmupBlocks>
  
  <system>
    <lBox>100</lBox>
    <dimensions>1</dimensions>
    <particles index="0" m="1" n="50" />
    <particles index="1" m="1" n="50" />
    <initialCondition kind="uniform" length="49" />    
    <g>0.02</g>
    <g_tilde>1</g_tilde>
  </system>
 
  <method kind="svmc">
    <sigma_diff>1e-3</sigma_diff>
    <mean_walkers>1</mean_walkers>
    <delta_walkers>10</delta_walkers>
    <delta_tau>0.001</delta_tau>
  </method>
  
  <measures>
    <pair_correlation label="pairUpDown" bins="2000" history="false" setA="0" setB="1" skip="9" /> 
    <pair_correlation label="pairUp" bins="2000" history="false" setA="0" setB="0" skip="9" />
    <static_structure_factor label="static_structure_factor" bins="200" setA="0" setB="1" skip="9" complex="true" max="20" history="false" />
    <static_structure_factor label="static_structure_factor_spin" bins="60" setA="0" setB="1" skip="9" complex="true" spin="true" max="10" history="false"/>
    
  </measures>

  
  <wavefunctions>

    <wavefunction jastrow_type="2b" kind="bill_jastrow" label="B-B" setA="0" setB="0">
    <jastrow file="jastrow.in" kind="delta" />
    </wavefunction>
    
   <wavefunction jastrow_type="2b" kind="bill_jastrow" label="B-I" setA="0" setB="1">
    <jastrow file="jastrowi.in" kind="delta" />
   </wavefunction>

    <wavefunction jastrow_type="2b" kind="bill_jastrow" label="I-I" setA="1" setB="1">
       <jastrow file="jastrow.in" kind="delta" />
   </wavefunction>

  
  </wavefunctions>
  
  <total_wavefunction label="main">
    <wavefunction label="B-B" />
    <wavefunction label="I-I" />
    <wavefunction label="B-I" />
  </total_wavefunction>
  
  <total_wavefunction label="no-impurity">
    <wavefunction label="B-B" />    
  </total_wavefunction>
  
</qmc>
